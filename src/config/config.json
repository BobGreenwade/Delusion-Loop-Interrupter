{
  "DLI_MODE": "active",
  "ESCALATION_THRESHOLD": 0.75,
  "EMOTION_SPIKE_THRESHOLD": 0.4,
  "REALITY_MODE_DEFAULT": "grounded",
  "MITIGATION_STYLE": "editorial",
  "PROFILE_ACCESS_GRANTED": true,
  "LOCATION_AWARE": false,
  "EXTERNAL_PROFILE_API": "https://your-api.com/profile",
  "ENABLE_EMBEDDING_CONTEXT": true,
  "PERSONA": {
    "name": "Copilot",
    "tone": "empathetic",
    "style": "clarifying",
    "allow_speculation": false
  },
  "MODULES_ENABLED": {
    "emotion": true,
    "confidence": true,
    "mirrorDetection": true,
    "scopedMemory": true,
    "referToHuman": true
  },
  "persona_resolution": {
    "strategy": "directory_scan",
    "base_path": "personas/",
    "file_patterns": ["*.backstory.json", "*.directives.md", "*.persona.txt"]
  },
  "chat_history": {
    "path": "logs/",
    "filename_pattern": "{persona}_chat.log",
    "scan_limit": 50
  },
  "llm": {
    "endpoint": "http://localhost:5000/paraphrase",
    "model": "gpt-4",
    "temperature": 0.7
  }
}
